<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/automatonList">

        <ImageView
            android:id="@+id/iv_automatonItem_automatonIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="44dp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_textViews"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_automatonItem_automatonIcon"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_automatonItem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_automatonItem_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_automatonItem_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_automatonItem_infos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_textViews"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_automatonItem_seeIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_see"
                android:onClick="onListAutomatonsClickManager"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btn_automatonItem_editIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_edit"
                android:onClick="onListAutomatonsClickManager"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btn_automatonItem_removeIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_trash"
                android:onClick="onListAutomatonsClickManager"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
